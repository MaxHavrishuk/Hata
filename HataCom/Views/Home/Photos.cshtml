@model IEnumerable<BusinessLogic.Models.Photo>

@Styles.Render("~/PhotosPage/css")

@{
    ViewBag.Title = "View";
}

<!--СПІЛЬНИЙ КОНТЕЙНЕР "ФОТО"-->
<div class="container main-container" style="margin-top: 55px;">

    <!--ХЛІБНІ КРИХТИ"-->
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index" class="breadcrumb-item">Головна</a></li>
                <li class="breadcrumb-item"><a href="/Home/PhotoAlbum" class="breadcrumb-item">Фото</a></li>
                <li class="breadcrumb-item active" aria-current="page">Test Album</li>
            </ol>
        </nav>
    </div>

    <!--НАЗВА АЛЬБОМУ-->
    <div class="row justify-content-between align-items-center pl-3 pr-3 mb-3">
        <h2 class="album-name">Альбом 1</h2>

        <!--КНОПКА "ДОДАТИ ФОТО"-->
        <button type="button" class="btn btn-info add-photo-btn"></button>
    </div>

    <!--ОПИС АЛЬБОМУ-->
    <div class="row pl-3 pr-3">
        <div class="col-12 col-md-6 col-xl-6 pl-0 pr-0">
            <p class="album-description">
                Це зручний інструмент для макетів. Це допомагає намітити візуальні елементи в документ або презентацію, наприклад.
            </p>
        </div>
    </div>

    <div class="mb-4 horizontal-line"></div>

    <!--КІЛЬКІСТЬ ФОТО-->
    <div class="row justify-content-between align-items-center pl-3 pr-3 mb-4">
        <h6 class="photos-quantity">Фото (@Model.Count())</h6>
        <!--КНОПКА "РЕДАГУВАТИ АЛЬБОМ"-->
        <button type="button" class="btn btn-outline-light edit-album-btn"></button>
    </div>

    <!--СПІЛЬНИЙ РЯДОК ДЛЯ ВІДОБРАЖЕННЯ ФОТО-->
    <div class="row photo-list">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 column-item">
                <a data-fancybox="gallery" href="@item.ImageLink">
                    <div class="card bg-dark text-white shadow mb-5 photo-item">
                        <div class="row ml-0 photo-gradient"></div>
                        <div class="embed-responsive embed-responsive-4by3">
                            <img src="@item.ImageLink"
                                 class="card-img embed-responsive-item photo-img" alt="...">
                        </div>
                        <div class="card-img-overlay photo-name-wrp">
                            <h6 class="card-title photo-name">@item.Title</h6>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<!-- ФУТЕР -->
<div class="container-fluid text-center mt-5 footer">
    <hr />
    <footer>
        <p>© 2020 - HATA</p>
    </footer>
</div>

@Scripts.Render("~/Photos.js")
