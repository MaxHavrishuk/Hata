@model IEnumerable<BusinessLogic.Models.Photo>

@Styles.Render("~/PhotosPage/css")

@{
    ViewBag.Title = "View";
}

<!-- ПОП-АП -->
<div class="fixed-top pop-up" style="margin-top: -55px;">
    <div class="container">
        <div class="row pl-3 pr-3 justify-content-center">
            <div class="btn btn-secondary mt-2 mr-2 pop-up-cancel">Скасувати</div>
            <div class="btn btn-success mt-2 ml-2">Зберегти</div>
        </div>
    </div>
</div>

<!--СПІЛЬНИЙ КОНТЕЙНЕР "ФОТО"-->
<div class="container main-container" style="margin-top: 55px;">

    <!--ХЛІБНІ КРИХТИ"-->
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index" class="breadcrumb-item">Головна</a></li>
                <li class="breadcrumb-item"><a href="/Home/PhotoAlbum" class="breadcrumb-item">Фото</a></li>
                <li class="breadcrumb-item active" aria-current="page">Test Album</li>
            </ol>
        </nav>
    </div>

    <div class="row align-items-center mb-3">
        <!--НАЗВА АЛЬБОМУ-->
        <div class="col-6">
            <div class="row pl-3 justify-content-start">
                <h2 class="album-name">Альбом 1</h2>
                <!--edit mode-->
                <textarea class="form-control album-name-editing" rows="1">Альбом 1</textarea>
            </div>
        </div>

        <!--КНОПКА "РЕДАГУВАТИ АЛЬБОМ"-->
        <div class="col-6">
            <div class="row pr-3 justify-content-end">
                <button type="button" class="btn btn-dark edit-album-btn"><i class="fas fa-cog"></i></button>
            </div>
        </div>
    </div>

    <!--ОПИС АЛЬБОМУ-->
    <div class="row">
        <div class="col-12 col-md-8 col-xl-6">
            <p class="album-description">
                Це зручний інструмент для макетів. Це допомагає намітити візуальні елементи в документ або
                презентацію, наприклад.
            </p>
            <!--edit mode-->
            <textarea class="form-control mb-3 album-description-editing" rows="3">Це зручний інструмент для макетів. Це допомагає намітити візуальні елементи в документ або презентацію, наприклад.</textarea>
        </div>
    </div>

    <!-- ГОРИЗОНТАЛЬНА ЛІНІЯ -->
    <div class="mb-4 horizontal-line"></div>

    <!--КІЛЬКІСТЬ ФОТО-->
    <div class="row justify-content-between align-items-center pl-3 pr-3 mb-4">
        <h6 class="photos-quantity">Фото (@Model.Count())</h6>

        <!--КНОПКА "ДОДАТИ ФОТО"-->
        <button type="button" class="btn btn-dark add-photos-btn"></button>

        <!--edit mode-->
        <!--КНОПКА "ВИДАЛИТИ ФОТО"-->
        <button type="button" class="btn btn-dark remove-photos-btn" disabled></button>
    </div>

    <!--СПІЛЬНИЙ РЯДОК ДЛЯ ВІДОБРАЖЕННЯ ФОТО-->
    <div class="row photo-list"></div>

    <!--СПІЛЬНИЙ РЯДОК ДЛЯ ВІДОБРАЖЕННЯ ФОТО-->
    <div class="row photo-list">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 column-item">
                <a data-fancybox="gallery" href="@item.ImageLink">
                    <div class="card bg-dark text-white shadow mb-5 photo-item">
                        <div class="row ml-0 photo-gradient"></div>
                        <div class="embed-responsive embed-responsive-4by3">
                            <img src="@item.ImageLink"
                                 class="card-img embed-responsive-item photo-img" alt="...">
                        </div>
                        <div class="card-img-overlay photo-name-wrp">
                            <h6 class="card-title photo-name">@item.Title</h6>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<!-- ФУТЕР -->
<div class="container-fluid text-center mt-5 footer">
    <hr />
    <footer>
        <p>© 2020 - HATA</p>
    </footer>
</div>

@Scripts.Render("~/Photos.js")
